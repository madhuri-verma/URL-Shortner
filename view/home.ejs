<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      }
    </style>
  </head>
  <body>
    <% if (locals.id) {%>
    <p>URL Generated : http://localhost:3001/url/<%= id %></p>
    <% } %>
    <form action="/url" method="POST">
      <label for="">Enter Your Original URL</label>
      <input type="text" name="redirectURL" placeholder="www.example.com" />
      <input type="submit" value="Generate ShortID" />
    </form>
    <% if (locals.urls) {%>
    <table>
      <thead>
        <th>id</th>
        <th>ShortId</th>
        <th>Redirect URL</th>
        <th>Visited History</th>
      </thead>

      <tbody>
        <% urls.forEach((url, index) => { %>
        <tr>
          <td><%= index %></td>
          <td><%= url.shortURL %></td>
          <td><%= url.redirectURL %></td>
          <td><%= url.visitHistory.length %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% } %>
  </body>
</html>
